{% extends 'base.html.twig' %}

{% block title %}
    INDEX
{% endblock %}

{% block body %}

{% for message in app.flashes('notice') %}
   <div class="alert alert-success">
    {{ message }}
   </div>
{% endfor %}

<h2 class="page-header"> Your Friends' Anniversaries </h2>
<p>Today is *DATE*</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Date</th>
            <th>Type</th>
            <th></th>
        </tr>
    </thead>
    {% for anniversary in birthdays %}
    <tbody>
        <tr>
            <th scope="row">{{anniversary.id}}</th>
            <td>{{anniversary.name}}</td>
            <td>{{anniversary.date|date('Y-m-d')}}</td>
            <td>{{anniversary.type}}</td>
            <td> <a href="/details/{{anniversary.id}}" class="btn btn-success">View</a>     
                <a href="/edit/{{anniversary.id}}" class="btn btn-default">Edit</a>
                <a href="/delete/{{anniversary.id}}" class="btn btn-danger">Delete</a>       
            </td>
        </tr> 
        {% endfor %}
    </tbody>
</table>

{% endblock %}
